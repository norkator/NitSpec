<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="1dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bootStrapPrimary"
                android:padding="10dp"
                android:text="Add ammunition"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:typeface="monospace" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Give all following parameters\n(A = Letter)"
                android:textAlignment="center"
                android:textSize="15sp"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Letter and title"
                android:textAlignment="center"
                android:textSize="15sp"
                android:typeface="monospace" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/letterInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#66bb6a"
                        android:textSize="30sp"
                        android:typeface="monospace" />

                    <EditText
                        android:id="@+id/nameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:hint="Name"
                        android:text="GAMO PBA Platinum"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/bootStrapPrimary"
                        android:textColorHint="@color/bootStrapPrimary"
                        android:textSize="20sp"
                        android:typeface="monospace" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:text="4.5mm lead free"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bootStrapPrimary"
                    android:textColorHint="@color/bootStrapPrimary"
                    android:textSize="20sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:text="Speed(m/s) and weight(g)"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/speedInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="m/s"
                        android:inputType="numberDecimal"
                        android:text="350.00"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/bootStrapPrimary"
                        android:textColorHint="@color/bootStrapPrimary"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/weightInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="g (gram)"
                        android:inputType="numberDecimal"
                        android:text="0.330"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/bootStrapPrimary"
                        android:textColorHint="@color/bootStrapPrimary"
                        android:textSize="20sp"
                        android:typeface="monospace" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:text="Sizing parameters (mm)"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/sizeXInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="X mm"
                        android:inputType="numberDecimal"
                        android:text="4.76"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/bootStrapPrimary"
                        android:textColorHint="@color/bootStrapPrimary"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/sizeYInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Y mm"
                        android:inputType="numberDecimal"
                        android:text="4.76"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/bootStrapPrimary"
                        android:textColorHint="@color/bootStrapPrimary"
                        android:textSize="20sp"
                        android:typeface="monospace" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:text="Drag coefficient (no unit)"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dragCoefficientXInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="X dc value"
                        android:inputType="numberDecimal"
                        android:text="0.015"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/bootStrapPrimary"
                        android:textColorHint="@color/bootStrapPrimary"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/dragCoefficientYInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Y dc value"
                        android:inputType="numberDecimal"
                        android:text="0.015"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/bootStrapPrimary"
                        android:textColorHint="@color/bootStrapPrimary"
                        android:textSize="20sp"
                        android:typeface="monospace" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dismissBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dismiss"
                    android:textColor="#9e9e9e"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/proceedBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proceed"
                    android:textColor="?colorPrimaryDark"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>