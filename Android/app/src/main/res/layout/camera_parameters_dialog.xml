<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="1dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@color/bootStrapPrimary"
                android:text="Parameters"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:typeface="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="See feature shop to enable all features"
                android:textColor="@color/colorAccent"
                android:typeface="monospace"
                android:textSize="13sp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <Spinner
                    android:id="@+id/modeSelectorSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:typeface="monospace"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#767676"
                    android:tooltipText="Mode selector"/>

                <Switch
                    android:id="@+id/enableTTSEngineSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use TTS engine (voice) "
                    android:typeface="monospace"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#767676"
                    android:checked="true"/>

                <Switch
                    android:id="@+id/enableTriggerSafetySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trigger safety control "
                    android:typeface="monospace"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#767676"
                    android:checked="true"/>

                <Button
                    android:id="@+id/adjustZoomLevelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Adjust camera zoom level"
                    android:textColor="@color/colorAccent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:backgroundTint="@color/colorAccent"
                    android:typeface="monospace"
                    android:textSize="13sp"/>

                <Switch
                    android:id="@+id/toggleNightVisionSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NV(Gamma correction) "
                    android:typeface="monospace"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#767676"
                    android:checked="true"/>

                <Button
                    android:id="@+id/adjustNightVisionGammaLevelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Night vision gamma level"
                    android:textColor="@color/colorAccent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:backgroundTint="@color/colorAccent"
                    android:typeface="monospace"
                    android:textSize="13sp"/>

                <Switch
                    android:id="@+id/manualTargetRangeInputSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual target range input"
                    android:typeface="monospace"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#767676"
                    android:checked="true"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/dismissBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:text="Dismiss"
                    android:typeface="monospace"
                    android:textSize="13sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>